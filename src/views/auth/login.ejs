<% layout('layout') -%>
<h1 class="text-2xl font-bold text-musanid-dark mb-6">تسجيل الدخول</h1>
<form method="POST" action="/auth/login" class="space-y-4 max-w-md">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div>
    <label class="block mb-1 text-sm font-medium">اسم المستخدم أو البريد</label>
    <input name="userOrEmail" class="w-full border rounded px-3 py-2" required />
  </div>
  <div>
    <label class="block mb-1 text-sm font-medium">كلمة المرور</label>
    <input type="password" name="password" class="w-full border rounded px-3 py-2" required />
  </div>
  <button class="btn-primary w-full">دخول</button>
  <p class="text-sm text-gray-600">لا تملك حساباً؟ <a class="text-musanid-dark underline" href="/auth/register">سجل الآن</a></p>
</form>