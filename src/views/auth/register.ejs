<% layout('layout') -%>
<h1 class="text-2xl font-bold text-musanid-dark mb-6">إنشاء حساب جديد</h1>
<form method="POST" action="/auth/register" class="space-y-4 max-w-lg">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <div class="grid md:grid-cols-2 gap-4">
    <div>
      <label class="block mb-1 text-sm font-medium">الاسم الأول</label>
      <input name="firstName" class="w-full border rounded px-3 py-2" required />
    </div>
    <div>
      <label class="block mb-1 text-sm font-medium">اسم العائلة</label>
      <input name="lastName" class="w-full border rounded px-3 py-2" required />
    </div>
    <div>
      <label class="block mb-1 text-sm font-medium">اسم المستخدم</label>
      <input name="username" class="w-full border rounded px-3 py-2" required />
    </div>
    <div>
      <label class="block mb-1 text-sm font-medium">البريد الإلكتروني</label>
      <input type="email" name="email" class="w-full border rounded px-3 py-2" required />
    </div>
  </div>
  <div>
    <label class="block mb-1 text-sm font-medium">كلمة المرور</label>
    <input type="password" name="password" class="w-full border rounded px-3 py-2" required />
    <div class="mt-2 flex items-center gap-3">
      <meter id="passwordStrength" min="0" max="5" low="2" high="4" optimum="5" value="0" class="w-40 h-4"></meter>
      <span class="text-xs text-gray-500">قوة كلمة المرور</span>
    </div>
    <ul class="mt-2 text-xs text-gray-500 list-disc pr-4 space-y-1">
      <li>٨ أحرف على الأقل</li>
      <li>حرف كبير وحرف صغير</li>
      <li>رقم ورمز خاص</li>
    </ul>
  </div>
  <button class="btn-primary w-full">تسجيل</button>
  <p class="text-sm text-gray-600">لديك حساب؟ <a class="text-musanid-dark underline" href="/auth/login">سجّل الدخول</a></p>
</form>