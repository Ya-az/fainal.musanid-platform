<% layout('layout') -%>
<section class="max-w-4xl mx-auto">
  <% if(!user){ %>
    <div class="bg-white dark:bg-dark-card rounded-lg shadow-sm p-6 text-center">
      <div class="text-amber-600 dark:text-amber-400 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m0 0v2m0-2h2m-2 0H9m3-4V9m1.5-2.5a4 4 0 11-8 0 4 4 0 018 0zM15 8h.01" />
        </svg>
      </div>
      <p class="text-gray-600 dark:text-gray-400 mb-6">يجب تسجيل الدخول لعرض هذه الصفحة.</p>
      <a href="/auth/login" class="btn-primary">تسجيل الدخول</a>
    </div>
  <% } else { %>
    
    <!-- الملف الشخصي المحسن -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- بطاقة المستخدم الرئيسية -->
      <div class="lg:col-span-1">
        <div class="bg-white dark:bg-dark-card rounded-lg shadow-sm p-6 text-center">
          <div class="relative mx-auto w-28 h-28 mb-4">
            <img src="<%= `https://ui-avatars.com/api/?name=${encodeURIComponent(user.firstName || '')}+${encodeURIComponent(user.lastName || '')}&background=38BDF8&color=fff&size=200` %>" 
                alt="الصورة الشخصية" class="w-28 h-28 rounded-full border-2 border-musanid-light">
            <button id="changeAvatarBtn" title="تغيير الصورة" class="absolute bottom-0 right-0 bg-musanid-dark text-white rounded-full p-2 shadow">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 5a2 2 0 00-2 2v8a2 2 0 002 2h12a2 2 0 002-2V7a2 2 0 00-2-2h-1.586a1 1 0 01-.707-.293l-1.121-1.121A2 2 0 0011.172 3H8.828a2 2 0 00-1.414.586L6.293 4.707A1 1 0 015.586 5H4zm6 9a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
          <h2 class="text-xl font-bold text-musanid-dark dark:text-musanid-light"><%= user.firstName || '' %> <%= user.lastName || '' %></h2>
          <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">@<%= user.username %></p>

          <div class="mt-6 space-y-2">
            <div class="flex justify-between text-sm border-b border-gray-200 dark:border-gray-700 py-2">
              <span class="font-medium text-gray-700 dark:text-gray-300">البريد الإلكتروني</span>
              <span class="text-gray-600 dark:text-gray-400"><%= user.email %></span>
            </div>
            <div class="flex justify-between text-sm border-b border-gray-200 dark:border-gray-700 py-2">
              <span class="font-medium text-gray-700 dark:text-gray-300">تاريخ التسجيل</span>
              <span class="text-gray-600 dark:text-gray-400"><%= new Date(user.createdAt).toLocaleDateString('ar-SA') %></span>
            </div>
          </div>

          <div class="mt-6">
            <a href="/settings" class="btn-secondary w-full text-sm">تعديل البيانات</a>
          </div>
        </div>
      </div>
      
      <!-- المحتوى الرئيسي (الإحصائيات والإنجازات) -->
      <div class="lg:col-span-2 space-y-6">
        <!-- إحصائيات التقدم -->
        <div class="bg-white dark:bg-dark-card rounded-lg shadow-sm p-6">
          <h3 class="font-bold text-lg mb-4 text-musanid-dark dark:text-gray-100 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            تقدمك في المنصة
          </h3>
          
          <div class="space-y-4">
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">الدروس المكتملة</span>
                <span class="text-sm font-medium text-musanid-dark dark:text-musanid-light">
                  <span id="completedLessons">-</span>/<span id="totalLessons">-</span>
                </span>
              </div>
              <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2.5">
                <div id="progressBar" class="bg-musanid-light h-2.5 rounded-full transition-all duration-500 w-0" 
                    aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
              <div class="bg-blue-50 dark:bg-blue-900/30 p-4 rounded-lg text-center">
                <h4 class="font-bold text-musanid-dark dark:text-blue-300">الدروس المكتملة</h4>
                <p id="stat-completed" class="text-2xl font-bold text-musanid-dark dark:text-blue-200">-</p>
              </div>
              <div class="bg-green-50 dark:bg-green-900/30 p-4 rounded-lg text-center">
                <h4 class="font-bold text-green-700 dark:text-green-300">نسبة الإكمال</h4>
                <p id="stat-percent" class="text-2xl font-bold text-green-600 dark:text-green-200">-</p>
              </div>
              <div class="bg-purple-50 dark:bg-purple-900/30 p-4 rounded-lg text-center">
                <h4 class="font-bold text-purple-700 dark:text-purple-300">الوقت المستثمر</h4>
                <p id="stat-time" class="text-2xl font-bold text-purple-600 dark:text-purple-200">-</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- الإنجازات -->
        <div class="bg-white dark:bg-dark-card rounded-lg shadow-sm p-6">
          <h3 class="font-bold text-lg mb-4 text-musanid-dark dark:text-gray-100 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            الإنجازات
          </h3>
          
          <div class="grid grid-cols-2 sm:grid-cols-3 gap-3" id="achievements-container">
            <!-- سيتم تعبئته بواسطة جافاسكربت -->
            <div class="p-3 border border-gray-200 dark:border-gray-700 rounded-lg text-center opacity-40">
              <div class="text-gray-400 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              </div>
              <h5 class="font-medium text-gray-500 dark:text-gray-400">أكمل أول درس</h5>
            </div>
            
            <div class="p-3 border border-gray-200 dark:border-gray-700 rounded-lg text-center opacity-40">
              <div class="text-gray-400 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
              </div>
              <h5 class="font-medium text-gray-500 dark:text-gray-400">أكمل 5 دروس</h5>
            </div>
            
            <div class="p-3 border border-gray-200 dark:border-gray-700 rounded-lg text-center opacity-40">
              <div class="text-gray-400 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                </svg>
              </div>
              <h5 class="font-medium text-gray-500 dark:text-gray-400">50% من المحتوى</h5>
            </div>
          </div>
        </div>
        
        <!-- الدروس الأخيرة -->
        <div class="bg-white dark:bg-dark-card rounded-lg shadow-sm p-6">
          <h3 class="font-bold text-lg mb-4 text-musanid-dark dark:text-gray-100 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            آخر الدروس التي أكملتها
          </h3>
          
          <div id="recent-lessons-container" class="space-y-2">
            <p class="text-gray-500 dark:text-gray-400 text-center py-4">جاري تحميل آخر الدروس المكتملة...</p>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</section>
<script src="/js/profile-page.js" defer></script>
