{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "jest": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".json"]
      }
    }
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_", "caughtErrorsIgnorePattern": "^_" }],
    "no-console": "off",
    "import/no-unresolved": "off",
    "prefer-const": "warn",
    "no-var": "warn",
    "eqeqeq": ["warn", "always"],
    "curly": ["warn", "multi-line"],
    "comma-dangle": ["warn", "never"]
  },
  "overrides": [
    {
      "files": ["public/js/*.js"],
      "env": {
        "browser": true,
        "node": false
      }
    }
  ],
  "ignorePatterns": [
    "coverage/",
    "public/",
    "docs/",
    "temp/",
    "**/*.min.js"
  ]
}
